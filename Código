# Diccionario para almacenar los puntos de los jugadores
puntos_jugadores = {}

frases = [
    ("El _____ global es causado por el aumento de gases de efecto invernadero.", "calentamiento"),
    ("Reciclar, reducir y _____ son las tres reglas b√°sicas para cuidar el medio ambiente.", "reutilizar"),
    ("El CO‚ÇÇ es un gas de _____ que contribuye al cambio clim√°tico.", "efecto invernadero"),
    ("El pl√°stico puede tardar hasta _____ a√±os en descomponerse en el oc√©ano.", "450"),
    ("Los paneles _____ convierten la luz solar en energ√≠a.", "solares"),
    ("Los residuos org√°nicos pueden convertirse en _____ para mejorar el suelo.", "compost"),
    ("El agua es un recurso _____ y debemos cuidarla.", "limitado"),
    ("La energ√≠a _____ proviene de fuentes naturales como el viento y el sol.", "renovable"),
    ("Las botellas de vidrio deben ir en el contenedor de color _____ en el reciclaje.", "verde"),
    ("El _____ de bosques reduce la cantidad de ox√≠geno en la Tierra.", "desmonte"),
    ("Los oc√©anos absorben aproximadamente el _____% del CO‚ÇÇ emitido por los humanos.", "30"),
    ("Las abejas ayudan a la polinizaci√≥n, lo que es clave para la producci√≥n de _____.", "alimentos"),
    ("El transporte p√∫blico reduce la contaminaci√≥n del _____ comparado con los autos particulares.", "aire"),
    ("Los _____ reutilizables son una excelente alternativa a las bolsas pl√°sticas.", "ecobolsas"),
    ("Usar luces LED en casa ayuda a reducir el consumo de _____ el√©ctrica.", "energ√≠a"),
]

@bot.command()
async def completa(ctx):
    """Minijuego de completar la frase con puntos"""
    frase, respuesta_correcta = random.choice(frases)  # Seleccionar frase aleatoria

    await ctx.send(f"üß† **Completa la frase:**\n{frase}\n*(Tienes 30 segundos para responder)*")

    def check(msg):
        return msg.channel == ctx.channel and msg.content.lower() == respuesta_correcta.lower()

    try:
        msg = await bot.wait_for("message", check=check, timeout=30)
        jugador = msg.author

        # Sumar puntos al jugador
        if jugador.id in puntos_jugadores:
            puntos_jugadores[jugador.id] += 1
        else:
            puntos_jugadores[jugador.id] = 1

        await ctx.send(f"üéâ ¬°Correcto, {jugador.mention}! La respuesta era **{respuesta_correcta}**. Tienes **{puntos_jugadores[jugador.id]} puntos**.")

    except (asyncio.TimeoutError, asyncio.exceptions.TimeoutError):
        await ctx.send(f"‚è≥ Tiempo agotado. La respuesta correcta era **{respuesta_correcta}**.")

@bot.command()
async def puntos(ctx):
    """Muestra la tabla de puntuaciones"""
    if not puntos_jugadores:
        await ctx.send("üìâ No hay puntos registrados a√∫n.")
        return

    ranking = sorted(puntos_jugadores.items(), key=lambda x: x[1], reverse=True)
    tabla_puntos = "\n".join([f"üèÜ <@{jugador_id}> ‚Üí {puntos} puntos" for jugador_id, puntos in ranking])

    await ctx.send(f"üìä **Ranking de jugadores:**\n{tabla_puntos}")

bot.run("N/A")
